
@{
    Layout = "~/views/shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}


    <center>
        <h2>Login For Admin</h2>
    
    </center>
<div class="container">
    
        
    <div class="row">

        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/home/login" method="post">
                <div class="search">
                    <label>Enter Email</label>
                    <input type="email" name="Admin_Email" placeholder="@ViewBag.msg" class="form-control" />
                  
                  
                </div>
                <div class="form-group">
                    <label>Enter Password</label>
                    <input type="password" name="Admin_Password" placeholder="@ViewBag.msg" class="form-control" />
                  
                    
                </div>
                <div class="form-group">

                    <input type="submit" class="btn btn-success btn-block" />
                    <span class="text-danger">@ViewBag.msg</span>
                </div>
            </form>

        </div>
    </div>
    </div>


